<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreem"
    android:orientation="vertical"
    android:background="#5880b3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view1"
            android:layout_width="20dp"
            android:layout_height="90dp"
            android:layout_marginLeft="200dp"
            android:background="@drawable/line_blue"/>

        <View
            android:id="@+id/view2"
            android:layout_width="20dp"
            android:layout_height="140dp"
            android:layout_marginLeft="225dp"
            android:background="@drawable/line_c"/>

        <View
            android:id="@+id/view3"
            android:layout_width="20dp"
            android:layout_height="190dp"
            android:layout_marginLeft="250dp"
            android:background="@drawable/line_t"/>

        <View
            android:id="@+id/view4"
            android:layout_width="20dp"
            android:layout_height="230dp"
            android:layout_marginLeft="275dp"
            android:background="@drawable/line_xl"/>

        <View
            android:id="@+id/view5"
            android:layout_width="20dp"
            android:layout_height="120dp"
            android:layout_marginLeft="175dp"
            android:background="@drawable/line_xn" />

        <View
            android:id="@+id/view6"
            android:layout_width="20dp"
            android:layout_height="170dp"
            android:layout_marginLeft="300dp"
            android:background="@drawable/line_xx"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/textWell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Wellcome"
            android:textSize="25dp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/textTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textWell"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="to"
            android:textSize="18dp"
            android:textColor="#fff"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:background="@drawable/logoboxyz"/>

    </RelativeLayout>


</LinearLayout>