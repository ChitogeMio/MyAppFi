<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>

            <solid android:color="#888A8A"/>
<!--            <gradient   android:angle="90"-->
<!--                android:startColor="#0ff"-->
<!--                android:endColor="#D000FF"/>-->
            <corners android:topRightRadius="15dp"
                android:bottomLeftRadius="15dp"/>
            <stroke android:width="3dp"
                android:color="#BEEDF5"/>
        </shape>

    </item>

    <item android:state_focused="true">

        <shape>

            <solid android:color="#BFC1C1"/>
<!--            <gradient   android:angle="90"-->
<!--                android:startColor="#E4E8E8"-->
<!--                android:endColor="#D000FF"/>-->
            <corners android:topRightRadius="15dp"
                android:bottomLeftRadius="15dp"/>
            <stroke android:width="3dp"
                android:color="#BEEDF5"/>
        </shape>

    </item>


    <item android:state_enabled="false">

        <shape>

            <solid android:color="#FFFFFF"/>
<!--            <gradient   android:angle="90"-->
<!--                android:startColor="#396C6C"-->
<!--                android:endColor="#D000FF"/>-->
            <corners android:topRightRadius="15dp"
                android:bottomLeftRadius="15dp"/>
            <stroke android:width="3dp"
                android:color="#BEEDF5"/>
        </shape>

    </item>

</selector>